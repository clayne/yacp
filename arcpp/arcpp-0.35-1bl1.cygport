HOMEPAGE="https://github.com/kimtg/Arcpp"
SRC_URI="https://github.com/kimtg/Arcpp/archive/refs/tags/v${PV}.tar.gz"
SRC_DIR="Arcpp-${PV}"

CATEGORY="Interpreters"
SUMMARY="Implementation of the Arc programming language"
DESCRIPTION="${SUMMARY}"

inherit cmake

CYGCMAKE_ARGS="
	-DREADLINE:BOOL=ON
"

src_test()
{
	cd ${B}
	verbose ./arc++.exe -v
}

src_install()
{
	cd ${B}
	dobin ./arc++.exe
}
