HOMEPAGE="https://github.com/slembcke/Chipmunk2D"
SRC_URI="https://github.com/slembcke/Chipmunk2D/archive/refs/tags/Chipmunk-${PV}.tar.gz"
SRC_DIR="Chipmunk2D-Chipmunk-${PV}"
PATCH_URI="
	https://sources.debian.org/data/main/${PN:0:1}/${PN}/${PV}-6/debian/patches/sys-sysctl.patch
	https://sources.debian.org/data/main/${PN:0:1}/${PN}/${PV}-6/debian/patches/header-guards.patch
	https://sources.debian.org/data/main/${PN:0:1}/${PN}/${PV}-6/debian/patches/configure.patch
	https://sources.debian.org/data/main/${PN:0:1}/${PN}/${PV}-6/debian/patches/spelling-fixes.patch
"

CATEGORY="Libs"
SUMMARY="Fast and lightweight 2D game physics library"
DESCRIPTION="Chipmunk2D is a simple, lightweight, fast and portable 2D rigid body physics
library written in C. It's licensed under the unrestrictive, OSI approved MIT
license. My aim is to give 2D developers access to the same quality of physics
you find in newer 3D games. I hope you enjoy using Chipmunk2D, and please
consider donating to help make it worth our time to continue to support
Chipmunk2D with great new features."

LICENSE="MIT"
LICENSE_SPDX="SPDX-License-Identifier: MIT"
LICENSE_URI="LICENSE.txt"

BUILD_REQUIRES="
	libGL-devel
	libX11-devel
"

inherit cmake

CYGCMAKE_ARGS="
	-DBUILD_STATIC:BOOL=OFF
	-DINSTALL_DEMOS:BOOL=ON
	-DINSTALL_STATIC:BOOL=OFF
	-DVERSION:STRING=${PV}
"

DOCS="
	VERSION.txt
"

PKG_NAMES="
	${PN}
	lib${PN}${PV[1]}
	lib${PN}-devel
"
chipmunk_CONTENTS="
	usr/bin/*.exe
	usr/share
"
libchipmunk7_CONTENTS="
	usr/bin/cyg*-${PV[1]}.dll
"
libchipmunk_devel_CONTENTS="
	usr/include
	usr/lib
"
chipmunk_SUMMARY="${SUMMARY} (utilities)"
libchipmunk7_SUMMARY="${SUMMARY} (runtime)"
libchipmunk_devel_SUMMARY="${SUMMARY} (development)"
