HOMEPAGE="https://github.com/flox/${PN}"
SRC_URI="https://github.com/flox/${PN}/archive/refs/tags/v${PV}.tar.gz"

CATEGORY="Utils"
SUMMARY="Next generation tee with colorized output streams and precise time stamping"
DESCRIPTION="${SUMMARY}"

LICENSE="MIT"
LICENSE_SPDX="SPDX-License-Identifier: MIT"
LICENSE_URI="LICENSE"

BUILD_REQUIRES="
	help2man
"

src_compile()
{
	cd ${B}
	lndirs
	cygmake PREFIX=/usr VERSION=${PV}
}

src_install()
{
	cd ${B}
	dobin ${PN}.exe
	doman ${PN}.1
}
