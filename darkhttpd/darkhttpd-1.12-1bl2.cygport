HOMEPAGE="https://unix4lyfe.org/${PN}/"
SRC_URI="https://unix4lyfe.org/${PN}/${P}.tar.bz2"

CATEGORY="Web"
SUMMARY="Minimal webserver"
DESCRIPTION="When you need a web server in a hurry"

src_compile()
{
	cd ${B}
	lndirs
	cygmake
}

src_test()
{
	cd ${B}
	./${PN}.exe --help
}

src_install()
{
	cd ${B}
	dobin ${PN}.exe
}
