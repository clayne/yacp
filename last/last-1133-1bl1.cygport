HOMEPAGE="http://${PN}.cbrc.jp/"
SRC_URI="http://${PN}.cbrc.jp/${P}.zip"

CATEGORY="Science"
SUMMARY="Genome-scale comparison of biological sequences"
DESCRIPTION="${SUMMARY}"

src_compile()
{
	cd ${B}
	lndirs
	cygmake
}

src_install()
{
	cd ${B}
	dobin src/*.exe
	exeinto /usr/share/${PN}/scripts
	doexe scripts/*
	dodoc *.txt
	dodoc doc/*.txt
}
