@@ -0,0 +1,27 @@
+cmake_minimum_required(VERSION 3.28)
+project(socket99
+  VERSION 0.2.2
+  DESCRIPTION "Wrapper library for the BSD sockets API with a nicer C99 interface"
+  HOMEPAGE_URL "https://github.com/silentbicycle/socket99")
+
+include(GNUInstallDirs)
+include(CTest)
+
+add_library(socket99 SHARED socket99.c)
+set_target_properties(socket99 PROPERTIES SOVERSION ${PROJECT_VERSION_MAJOR})
+
+install(TARGETS socket99
+  RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+  ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR})
+
+add_executable(test_socket99 test_socket99.c)
+target_link_libraries(test_socket99 PRIVATE socket99)
+
+install(FILES socket99.h DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})
+
+set(prefix ${CMAKE_INSTALL_PREFIX})
+set(exec_prefix ${CMAKE_INSTALL_PREFIX})
+set(libdir ${CMAKE_INSTALL_PREFIX}/lib)
+set(includedir ${CMAKE_INSTALL_PREFIX}/include)
+configure_file(${CMAKE_SOURCE_DIR}/socket99.pc.in ${CMAKE_BINARY_DIR}/socket99.pc @ONLY)
+install(FILES ${CMAKE_BINARY_DIR}/socket99.pc DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/pkgconfig)
