HOMEPAGE="https://www.udo-richter.de/vdr/${PN}.en.html"
SRC_URI="https://www.udo-richter.de/vdr/files/${P}.tgz"

CATEGORY="Audio"
SUMMARY="Tool to delete NALU fill data from h.264 streams embedded into TS files"
DESCRIPTION="${SUMMARY}"

LICENSE="GPL-2.0-or-later"
LICENSE_SPDX="SPDX-License-Identifier: GPL-2.0-or-later"
LICENSE_URI="COPYING"

BUILD_REQUIRES="libiconv-devel"

src_compile()
{
	cd ${B}
	lndirs
	cygmake LIBS=-liconv
}

src_install()
{
	cd ${B}
	dobin ${PN}.exe
}
