--- origsrc/fidlib-0.9.10/CMakeLists.txt	1970-01-01 09:00:00.000000000 +0900
+++ src/fidlib-0.9.10/CMakeLists.txt	2025-08-10 11:23:15.413366800 +0900
@@ -0,0 +1,29 @@
+cmake_minimum_required(VERSION 3.28)
+project(fidlib
+  VERSION 0.9.10
+  DESCRIPTION "Run-time filter design and execution library"
+  HOMEPAGE_URL "https://uazu.net/fidlib/")
+
+include(GNUInstallDirs)
+include(CTest)
+
+add_library(fidlib SHARED "fidlib.c")
+target_compile_definitions(fidlib PRIVATE T_LINUX)
+set_target_properties(fidlib PROPERTIES SOVERSION ${PROJECT_VERSION_MAJOR})
+
+install(TARGETS fidlib
+  RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+  ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR})
+
+add_executable(firun "firun.c")
+target_link_libraries(firun fidlib)
+install(TARGETS firun RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR})
+
+install(FILES fidlib.h DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})
+
+set(prefix ${CMAKE_INSTALL_PREFIX})
+set(exec_prefix ${CMAKE_INSTALL_PREFIX})
+set(libdir ${CMAKE_INSTALL_PREFIX}/lib)
+set(includedir ${CMAKE_INSTALL_PREFIX}/include)
+configure_file(${CMAKE_SOURCE_DIR}/fidlib.pc.in ${CMAKE_BINARY_DIR}/fidlib.pc @ONLY)
+install(FILES ${CMAKE_BINARY_DIR}/fidlib.pc DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/pkgconfig)
