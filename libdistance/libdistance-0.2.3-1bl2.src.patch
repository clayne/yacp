--- origsrc/libdistance-0.2.3/CMakeLists.txt	1970-01-01 09:00:00.000000000 +0900
+++ src/libdistance-0.2.3/CMakeLists.txt	2025-08-14 19:55:34.760347800 +0900
@@ -0,0 +1,32 @@
+cmake_minimum_required(VERSION 3.28)
+project(libdistance
+  VERSION 0.2.3
+  DESCRIPTION "Compute the distance between two pieces of data"
+  HOMEPAGE_URL "https://monkey.org/~jose/software/libdistance/")
+
+include(GNUInstallDirs)
+include(CTest)
+
+add_library(distance SHARED
+  levenshtein.c hamming.c bloom.c needleman_wunsch.c jaccard.c minkowski.c damerau.c)
+set_target_properties(distance PROPERTIES SOVERSION ${PROJECT_VERSION_MAJOR})
+
+install(TARGETS distance
+  RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+  ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR})
+
+add_executable(distance-test "test/test.c")
+target_include_directories(distance-test PRIVATE ${CMAKE_SOURCE_DIR})
+target_link_libraries(distance-test distance)
+add_test(NAME distance-test COMMAND distance-test)
+
+install(FILES distance.h DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})
+
+install(FILES distance.3 DESTINATION ${CMAKE_INSTALL_MANDIR}/man3)
+
+set(prefix ${CMAKE_INSTALL_PREFIX})
+set(exec_prefix ${CMAKE_INSTALL_PREFIX})
+set(libdir ${CMAKE_INSTALL_PREFIX}/lib)
+set(includedir ${CMAKE_INSTALL_PREFIX}/include)
+configure_file(${CMAKE_SOURCE_DIR}/libdistance.pc.in ${CMAKE_BINARY_DIR}/libdistance.pc @ONLY)
+install(FILES ${CMAKE_BINARY_DIR}/libdistance.pc DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/pkgconfig)
