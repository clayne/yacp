  /usr/include/evmc/helpers.h
  /usr/include/evmc/hex.hpp
  /usr/include/evmc/instructions.h
  /usr/include/evmc/loader.h
  /usr/include/evmc/mocked_host.hpp
  /usr/include/evmc/utils.h
  /usr/lib/cmake/evmc/EVMC.cmake
