HOMEPAGE="https://github.com/fortran-lang/${PN}"
SRC_URI="https://github.com/fortran-lang/${PN}/archive/refs/tags/v${PV}.tar.gz"

CATEGORY="Libs"
SUMMARY="Simple testing framework"
DESCRIPTION="${SUMMARY}"

LICENSE="Apache-2.0 OR MIT"
LICENSE_SPDX="SPDX-License-Identifier: Apache-2.0 OR MIT"
LICENSE_URI="LICENSE-Apache"

inherit meson

CYGMESON_ARGS="
	-Ddefault_library=shared
"

src_install()
{
	cd ${S}
	meson_install

	cd ${D}
	mkdir -p usr/share/doc/${PN}/
	mv usr/share/licenses/${PN}/* usr/share/doc/${PN}/
}

DOCS="
	LICENSE*
"

PKG_NAMES="
	test-drive
	libtest-drive0
	libtest-drive-devel
"
test_drive_CONTENTS="
	usr/share
"
libtest_drive0_CONTENTS="
	usr/bin/cyg*-0.dll
"
libtest_drive_devel_CONTENTS="
	usr/include
	usr/lib
"
test_drive_SUMMARY="${SUMMARY} (licensing & readmes)"
libtest_drive0_SUMMARY="${SUMMARY} (runtime)"
libtest_drive_devel_SUMMARY="${SUMMARY} (development)"
